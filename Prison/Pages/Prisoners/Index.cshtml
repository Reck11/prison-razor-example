@page
@model Prison.Pages.Prisoners.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prisoner[0].RegistrationNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prisoner[0].ImprisonmentStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prisoner[0].ImprisonmentEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prisoner[0].Crime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prisoner[0].Cell)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prisoner[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prisoner[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prisoner[0].Age)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Prisoner) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImprisonmentStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImprisonmentEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Crime.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cell.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
