</div>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Prisoners[0].FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.Prisoners[0].LastName)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Prisoners) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-page="/Prisoners/Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="/Prisoners/Details" asp-route-id="@item.Id">Details</a> |
