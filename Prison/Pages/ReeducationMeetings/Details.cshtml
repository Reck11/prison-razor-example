}

<h1>Details</h1>

<div>
    <h4>ReeducationMeeting</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReeducationMeeting.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReeducationMeeting.Time)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReeducationMeeting.MaximumNumberOfPrisoners)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReeducationMeeting.MaximumNumberOfPrisoners)
        </dd>
