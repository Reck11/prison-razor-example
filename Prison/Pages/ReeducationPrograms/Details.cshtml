@page
@model Prison.Pages.ReeducationPrograms.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ReeducationProgram</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReeducationProgram.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReeducationProgram.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReeducationProgram.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReeducationProgram.Description)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ReeducationStaff[0].FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.ReeducationStaff[0].LastName)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ReeducationStaff) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-page="/ReeducationStaff/Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="/ReeducationStaff/Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="/ReeducationStaff/Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Meetings[0].Time)</th>
            <th>@Html.DisplayNameFor(model => model.Meetings[0].MaximumNumberOfPrisoners)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Meetings) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Time.ToShortDateString())
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaximumNumberOfPrisoners)
                </td>
                <td>
                    <a asp-page="/ReeducationStaff/Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="/ReeducationStaff/Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="/ReeducationStaff/Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.ReeducationProgram?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
